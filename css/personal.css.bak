/*通用样式*/
body{
/*	font:16px "microsoft yahei",Arial,sans-serif;
	color:#666;*/
	margin:0 auto;
	padding:0;
}
#top,#main,#footer{
	width:100%;
	float:left;
	margin:0 auto;
}
ul,p,h1,h2,h3,h4,h5,h6,dl,dd{
	margin:0;
	padding:0;
	list-style:none;
}
input{border:1px solid #000;}
img{vertical-align:bottom;}

a{
	color:#000;
	text-decoration:none;
	font-weight: normal !important;
}
.fl{float:left;}
.fr{float:right;}
.clear{clear:both;}
