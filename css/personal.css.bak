#footer form{
	float: left;
    text-align: center;
    line-height: 70px;
	margin-bottom: 100px;
}
input,
textarea{
	color:#999;
	border-radius:2px;
	transition:background 350ms ease-in;
}
input:focus,
textarea:focus,
button:focus{
	border-color:#66A2D2;
	background-color:#202020;
}
form .input1,
form .input2{
	height:2em;
	width:450px;
	padding:5px 10px;
}
form .input3{
	width:930px;
	padding:5px 10px;
	border:1px solid #000;
}
form button{
	width: 790px;
    height: 37px;
    background-color: transparent;
    border: 1px solid #000;
    border-radius: 2px;
	color:#999;
    display: block;
    margin: -16px auto 0;
}
/*******底部布局结束**************/