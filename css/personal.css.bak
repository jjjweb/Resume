/*STEP1:页面顶部布局**************/
#top .navigation{
	width:100%;
	background-color:#fff;
	position: fixed;
    z-index: 100;
	opacity:0;
	top:-75px;
	box-shadow:0 2px 8px 0 rgba(50, 50, 50, 0.08);
}
.navigation h3{
    margin-left: 75px;
    line-height: 60px;
    width: 150px;
	float:left;
}
.navigation ul.lead{
	float:right;
	margin-right:10px;
	padding-top:22px;
}
.navigation ul li{
	padding-right:60px;
	float:left;
	font-size:15px;
}
.navigation ul li a:hover{
	color:#EB5424;
}
#top .bgphoto{
	width:100%;
	margin:0 auto;
	z-index:50;
	position:relative;
}
.bgphoto img{
	text-align:center;
	width:100%;
}
.bgphoto .john{
	width: 100%;
    margin: 8% auto;
	text-align: center;
	position:absolute;
	top:20%;
}
.bgphoto .john h1{
	font-size: 60px;
    margin-bottom: 20px;
}
.bgphoto .john h2{
    font-weight: bold;
    font-size:23px;
    padding-bottom: 40px;
    letter-spacing: 2px;
}
/* .bgphoto .john h1,.bgphoto .john h2{
	text-transform: uppercase;
} */
.bgphoto .john p{
	line-height: 28px;
	font-size:31px;
    width: 750px;
    margin: 0 auto;
}
.bgphoto .john a{
	color: #fff;
	background: #eb5424;
	display:inline-block;
	font-size: 20px;
	font-weight: 350px;
	margin-top: 140px;
    padding: 15px 50px;
	cursor:pointer;
}
.bgphoto .john a:hover{
	background:#fff;
	color:#eb5424;
	transition:background 500ms linear;
}
/*******顶部布局结束**************/

/*STEP2:页面主体布局**************/
#main .portfolio,
#main .skills,
#main .profile,
#footer .drop-me{
	text-align: center;
    margin: 69px 0;
}
#main .portfolio h2,
#main .skills h2,
#main .profile h2,
#footer .drop-me h2{
	display: inline-block;
    width: 160px;
    border-bottom: 3px solid #E1E1E1;
    padding-bottom: 10px;
}
#main .start-portfolio,
#main .start-skills,
#main .start-profile{
	float:left;
	width:100%;
}

/*START2-1:关于我 PROFILE*/
.start-portfolio {
	margin-bottom: 50px;
}
.start-profile .profile{
	text-align:center;
}
/*
#main .start-profile img{
	text-align:center;
	width:100%;
	float:left;
}*/
#main .start-profile .left,
#main .start-profile .right{
	width:50%;
	float:left;
}
/* .start-profile .left .li-1{
	margin-left:20px;
} */
.start-profile .right h2{
	font-size: 30px;
    font-weight: bold;
    display: inline-block;
    width: 156px;
    padding-left: 100px;
	color:#55C1E5;
}
.start-profile .left ul{
	width: 315px;
    margin-left: 300px;
    margin-top: 30px;
}
.start-profile .left li{
	float:left;
	width:146px;
	margin-bottom:15px;
}
.start-profile .right p{
	width: 530px;
    line-height: 27px;
	padding-left: 50px;
    margin-top: 2em;
}

/*START2-2:技能 SKILLS*/
#main .start-skills{
	background-color:#F5F5F5;
	margin-top: 100px;
}
.start-skills .skills-details{
    text-align: center;
	margin-bottom: 30px;
}
.start-skills h2{
	margin-bottom: 55px;
}
.start-skills .person{
	color: #6C6C6C;
/*     padding: 3em 0em 4em 0em; */
    text-align: center;
}
.skills-details .chart{
	position:relative;
	display:inline-block;
	margin:1em;
	width:230px;
    height: 230px;
    text-align:center;
}
.chart-content{
	position:absolute;
	left:0;
	width:100%;
	top:81px;
}
.skills-details .chart .percent{
	color:#656565;
	font-weight:700;
	font-size:2.3em;
	line-height:1.34
}
.percent:after{
	content:'%';
}
.skills-details .chart .chart-title{
	color:#656565;
	font-weight:700;
	font-size:0.889em;
}
.chart canvas{
	width:230px;
	height:230px;
}
.skills-details .skill{
	text-align:center;
	padding-top: 100px;
}

/*START2-3:作品 PORTFOLIO*/
.production .production-first{
	height:506px;
	width:1051px;
	margin:0 auto;
	overflow: hidden;
	position:relative;
}
.production-left{
	padding-top:225px;
}
.production-right{
	left: 1000px;
}
.production-left,
.production-right{
	cursor:pointer;
	position:absolute;
	z-index:100;
}
/* 设置其他两个链接页面为隐藏 */
/* li.production-2{
	opacity:0;
	display:none;
} */
/* 设置三个链接页面 */
.show{
	position:absolute;
	top:0px;
	left:50px;
	width:2886px;
}
.production-2{
	width:962px;
    position: relative;
	left:0;
	float:left;
}
.production-2 img{
	padding-left:40px; 
	float:left;
}
.production-2 dl{
	margin: 50px 0 0 66px;
	float:left;
	position: absolute;
    top: 0px;
    right: 85px;
}
.production-2 dt{
	margin-bottom:10px;
	color:#CFCFCF;
	font-weight:bold;
}
.production-2 dd{
	margin-bottom:30px;
}
.production-first .production-2 .browser{
	color: #2EABC3;
    border: 2px solid #EB5424;;
    border-radius: 5px;
    width: 80px;
    text-align: center;
    padding: 6px;
    float: right;
	position: absolute;
    top: 285px;
	right:84px;
}
.production-2 p.text{
	position:absolute;
	top:100px;
	left:300px;
	opacity:0;
}
.production-2 p.text:hover{
opacity:1;
	
}
.production-2 .browser a:hover{
	color:#fff;
}
.production-2 .w714{
	width:676px;
	height:506px;
	margin-left:39px;
	background-color:#EB5424;
	opacity:0;
	cursor:pointer;
	transition:opacity 300ms linear;
}
.production-first .production-2 .browser:hover{
	background-color:#EB5424;
	transition:background 250ms linear;
}
/* 图片 */
.production-first .production-2 .w714:hover{
	opacity:.5;
}
.production-right a{
	margin-top:225px; 
	float:right;
	vertical-align:middle;
}
.production .productoin-second{
	display:none;
}

/*******主体布局结束**************/

/*STEP2:页面底部布局**************/
/*START CONTACT*/
#footer ul.social,
#footer .drop-me{
	width: 100%;
    float: left;
    margin: 0 auto;
    margin-bottom: 69px;
}
.social li{
	width:33.33%;
	float:left;
	height: 200px;
	position:relative;
}

.social li.first{
	background-color:#3B5998;
}
.social .first:hover,
.social .second:hover,
.social .third:hover{
	background-color:#202020;
	/* transition:background 350ms linear; */
	transition: all 0.6s ease-in;
}
.social .first img,
.second img,
.third img{
	margin-left: 30px;
    margin-top: 80px;
	float: left;
}
.social  .follow,
.social .social{
	color:#fff;
	position: absolute;
    margin-left: 26px;
    margin-top: 104px;
}
.social .follow{
	margin-top: 80px;
    margin-left: 27px;
    display: inline-block;
    position: absolute;
}
.social li.second{
	background-color:#55ACEE;
}
.social li.third{
	background-color:#CC2127;
}
